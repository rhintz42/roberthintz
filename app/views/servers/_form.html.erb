<div class="server_div server_div_form">
  <%= form_for @server, :html => {:multipart => true}, :remote => true do |f| %>
    <% if @server.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

        <ul>
        <% @server.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :url %><br />
      <%= f.text_field :url %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
    <%= f.hidden_field :user_id, :value => current_user[:id] %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
