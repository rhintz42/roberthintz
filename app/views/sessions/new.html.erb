<h1>Login Page</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
  
  <div class="password_field">
    <p>
      Forgot your password? <%= link_to "Click Here to Reset your password!", new_password_reset_path %>
    </p>
  </div>
<% end %>
